.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icon
        = link_to new_group_path, class: "top-items__icon top-items__icon--btn" do
          %i.far.fa-edit
        = link_to edit_user_path(current_user), class: "top-items__icon top-items__icon--btn" do
          %i.fa.fa-cog
      
  .side-bar__group-list
    .side-bar__group-list--chart
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group), class:"side-bar__group-list--chart--title" do
            = group.name
          .side-bar__group-list--chart--comment
            = group.show_last_message